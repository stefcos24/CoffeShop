@model IEnumerable<CoffeShop.Models.ProductTypes>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Lista tipova proizvoda</h2>
            </div>
            <div class="col-6 text-right" style="text-align:right;">
                <a asp-controller="ProductTypes" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                     Napravi novi tip proizvoda
                </a>
            </div>
        </div>
    </div>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ime tipa proizvoda</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td>@obj.Name</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ProductTypes" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary"><i class="bi bi-pencil"></i> Uredi</a>
                    </div>
                </td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ProductTypes" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash"></i> Izbriši</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
