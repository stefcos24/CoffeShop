@model CoffeShop.Models.ProductTypes

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="broder p-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Uredi tip proizvoda</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name">Ime</label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Uredi" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">Nazad</a>
                    </div>
                </div>
            </div>

        </div>
    </div>


</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
