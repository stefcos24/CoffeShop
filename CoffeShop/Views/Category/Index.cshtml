@model IEnumerable<CoffeShop.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista kategorija</h2>
        </div>
        <div class="col-6 text-right" style="text-align:right;">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 
                 Napravi novu kategoriju
            </a>
        </div>
    </div>
</div>


@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ime kategorije</th>
                <th scope="col">Br. pokazivanja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary"><i class="bi bi-pencil"></i> Uredi</a>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash"></i> Izbriši</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
