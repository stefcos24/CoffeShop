@page
@model RegisterModel

@if(User.IsInRole(CoffeShop.WC.AdminRole))
            {
                <h1 class="m-2" style="text-transform:uppercase; font-size:30px;">Kreiraj profil Vlasnika</h1>
}
else
            {
                <h1 class="m-2" style="text-transform:uppercase; font-size:30px;">Registruj se</h1>
            }

    <div class="col-md">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="m-2" style="font-size:20px;">Kreiraj novi nalog</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-lg-4 m-2">
                <label asp-for="Input.FullName">Ime i Prezime</label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4 m-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4 m-2">
                <label asp-for="Input.PhoneNumber">Broj telefona</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4 m-2">
                <label asp-for="Input.Password">Šifra</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4 m-2">
                <label asp-for="Input.ConfirmPassword">Potvrdi šifru</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(CoffeShop.WC.AdminRole))
            {
                <button type="submit" class="btn btn-warning m-2">Registruj profil Vlasnika</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary m-2">Registrujte se</button>
            }
        </form>
    </div>

